{
    "css"   : {
        "all"   : [
            "_css/**/*",
            "!_css/imports/**/*"
        ],
        "src"   : [
            "_css/**/*",
            "!_css/imports/**/*",
            "!_css/imports",
            "!_css/stylings/**/*",
            "!_css/stylings",
            "!_css/old/**/*",
            "!_css/old"
        ],
        "watch" : [
            "_css/**/*.less",
            "_css/**/*.scss"
        ],
        "dest"  : "css/",
        "merged": {
        }
    },
    "js"    : {
        "all"   : [
            "_js/**/*.js"
        ],
        "lint"  : [
            "_js/**/*.js"
        ],
        "src"   : [
            "_js/**/*.js",
            "!_js/default-initial/**/*.js",
            "!_js/default-modules/**/*.js",
            "!_js/old/**/*",
            "!_js/old"
        ],
        "dest"  : "javascript/",
        "merged": {
            "default-initial": {
                "src": [
                    "bower_components/html5-boilerplate/js/vendor/modernizr-2.6.2.min.js",
                    "_js/default-initial/**/*.js"
                ]
            },
            "default-modules" : {
                "src": [
                    "bower_components/jquery/dist/jquery.js",
                    "bower_components/bootstrap/dist/js/bootstrap.js",
                    "bower_components/vex/js/vex.js",
                    "bower_components/vex/js/vex.dialog.js",
                    "bower_components/WOW/dist/wow.js",

                    "bower_components/parsleyjs/dist/parsley.remote.js",

                    "bower_components/jquery.complexify.js/jquery.complexify.banlist.js",
                    "bower_components/jquery.complexify.js/jquery.complexify.js",

                    "bower_components/assets/javascript/**/*.js",

                    "_js/default-modules/**/*.js"
                ]
            }
        }
    },
    "images": {
        "src" : [
            "_images/**/*",
            "!_images/old/**/*",
            "!_images/old"
        ],
        "dest": "images/"
    },
    "html"  : {
        "src" : ["app/storage/views/**/*", "!.gitignore"],
        "dest": "templates/"
    },
    "fonts" : {
        "src" : [
            "_fonts/**/*",
            "!_fonts/old/**/*",
            "!_fonts/old"
        ],
        "dest": "fonts/"
    }
}